
<main>
    {{#if prods.length}}
        <div class="grid">
            {{#each prods}}
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title">{{this.title}}</h1>
                    </header>
                    <div class="card__image">
                        <img src="{{this.imageUrl}}" alt="{{this.title}}" width="200" height="200"
                        >
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">${{this.price}}</h2>
                        <p class="product__description">{{this.description}}</p>
                    </div>
                    <div class="card__actions">
                        <a href="/admin/edit-product/{{this._id}}" class="btn">Edit</a>
                        <form action="/admin/delete-product" method="POST">
                            <input type="hidden" value="{{this._id}}" name="id" />
                            <button class="btn">Delete</button>
                        </form>
                    </div>
                    {{!-- <div /class="card__actions">
                    </div> --}}
                </article>
            {{/each}}
        </div>
    {{else}}
        <h1>No products found!</h1>
    {{/if}}
</main>
